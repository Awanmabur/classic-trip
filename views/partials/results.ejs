
<% item.reverse() %>
  <% if (results.length === 0) { %>
    <p class="emptyitem">No item found now, please come back later.</p>
    <% } else { %>

  <div class="row">

    <% results.forEach(item => { %>
    <div class="column1">
        <a href="/itemmore/<%= item._id %>">
        <div class="block" data-rotate-y="180deg" data-move-z="-200px" data-move-x="-300px" data-aos="fade-left" data-aos-duration="1100">
        <img src="https://res.cloudinary.com/drz8slibo/image/upload/<%= item.image1_id %>" alt="item Image">
        <h4 id="itemname"><%= item.itemname?.slice(0, 25) %>.... </h4>
        <table>
          <tr>
            <td><p id="InitialPrice"><%= item.currency %><%= calculateInitialPrice(item.price) %></p></td>
            <td><h3 id="realprice"><%= item.currency %><%= item.price %> </h3></td>
          </tr>
         </table>
        </div>
        </a>
        </div>

    <% }) %>

      </div>

    <% } %>
