<div style="width: 100%" id="slider" class="slider">
    <!-- fade css -->

<% promotedItems.forEach((item, index) => { %>
    <div class="myslide fade">
      <div class="txt">
        <h2 class="item_title"><%= item.itemname %> </h2>
        <p style="color:white; font-weight: normal; font-size: 16px;">Promotion status: <%= item.isPromoted ? "Promoted" : "Not Promoted" %></p>

        <table>
          <tr>
            <td><h2 id="InitialPrice"><%= item.currency %><%= calculateInitialPrice(item.price) %></h2></td>
            <td><h2 id="realprice"><%= item.currency %><%= item.price %></h2></td>
          </tr>
        </table>

        <a id="more-btn" href="/itemmore/<%= item._id %>" class="btn btn-warning">View item</a>
        <a id="more-btn" href="https://api.whatsapp.com/send?phone=256781977217" class="btn btn-warning">chat</a><br>


       </div>
      <img class="dot" onclick="currentSlideit(1)" id="slide" src="https://res.cloudinary.com/drz8slibo/image/upload/<%= item.image1_id %>" alt="item Image">
     <!-- /fade css -->


   </div>

   <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
   <a class="next" onclick="plusSlides(1)">&#10095;</a>

     <% }); %>
    <!-- /onclick js -->
  </div>
